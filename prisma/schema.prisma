generator client {
  provider = "prisma-client-js"
  output   = "../shared/lib/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  givenGifts    Gift[] @relation("GiverGifts")
  receivedGifts Gift[] @relation("ReceivedGifts")

  @@map("users")
}

model Gift {
  id          String   @id @default(cuid())
  title       String
  description String?
  image       String?
  price       Decimal? @db.Decimal(10, 2)
  link        String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  giverId     String
  receiverId  String?
  giver       User     @relation("GiverGifts", fields: [giverId], references: [id])
  receiver    User?    @relation("ReceivedGifts", fields: [receiverId], references: [id])

  @@map("gifts")
}
